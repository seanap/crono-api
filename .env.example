# Required for crono operations
CRONO_KERNEL_API_KEY=sk-your-kernel-key
CRONO_CRONOMETER_EMAIL=you@example.com
CRONO_CRONOMETER_PASSWORD=your-cronometer-password

# Required for API protection (recommended)
CRONO_API_KEY=replace-with-a-long-random-key

# Optional server settings
CRONO_PORT=8080
CRONO_HOST=0.0.0.0
CRONO_CLI_TIMEOUT_MS=180000

# Optional fallback for calorie deficit/surplus endpoint
# Used when export data does not include a calorie target column.
CRONO_DEFAULT_CALORIE_TARGET=

# Set true only if you intentionally want no API key auth
CRONO_ALLOW_NO_API_KEY=false
